<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.premiergenie.pgbbay">

    <uses-sdk tools:overrideLibrary="com.firebase.ui.auth,com.firebase.ui" />

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Authentication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PGBbay_DatabaseActivity"
            android:label="@string/pg_database" />
        <activity
            android:name=".FeeDetails.FeeDetailsActivity"
            android:label="@string/fee_name" />
        <activity
            android:name=".Attendance.AttendanceActivity"
            android:label="Attendance" />
        <activity
            android:name=".Attendance.AttendanceEditorActivity"
            android:label="Attendance Editor" />
        <activity
            android:name=".FileUploadActivity"
            android:label="FileUpload" />



        <activity
            android:name=".Students.StudentsActivity"
            android:label="Students" />
        <activity
            android:name=".Students.StudentEditorActivity"
            android:label="Student Editor" />
        <activity android:name=".FeeDetails.FeeDetailsEditorActivity" />
    </application>

</manifest>